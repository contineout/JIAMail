<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_selector"
    android:id="@+id/draft_item">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/RL1">
    <ImageView
        android:id="@+id/draft_save"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/drafts_save"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/from_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:text="112"
            android:textSize="13sp"
            />
         <ImageView
             android:id="@+id/attachment_1"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:src="@mipmap/attachment_1"
             android:layout_centerVertical="true"
             android:layout_marginRight="10dp"
             android:layout_alignParentRight="true"/>
</RelativeLayout>
        <RelativeLayout
            android:id="@+id/RL2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/RL1">

        <TextView
            android:id="@+id/mail_subject"
            android:layout_width="278dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/from_time"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp"
            android:maxLines="1"
            android:maxEms="15"
            android:ellipsize="end"
            />

            <TextView
                android:id="@+id/from_time"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:text="01-02 17.53"
                android:textSize="12sp"
                />
        </RelativeLayout>
        <TextView
            android:layout_marginLeft="23dp"
            android:id="@+id/mail_content"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/RL2"
            android:text=""
            android:textSize="13sp"
            android:maxLines="2"
            android:maxEms="15"
            android:ellipsize="end"
            />
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/xiahua"/>
</LinearLayout>