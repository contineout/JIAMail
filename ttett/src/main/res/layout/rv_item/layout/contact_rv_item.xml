<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/contact_item"
    android:layout_height="70dp"
    android:background="@drawable/item_selector">

    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!--What you want to show-->
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="发送邮件"
            android:textSize="17sp"
            android:background="#0968F7"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="删除"
            android:textSize="17sp"
            android:background="#FF0033"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_margin="10dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contacts_Iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/folder_in"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/contacts_Iv"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="112" />
        <TextView
            android:id="@+id/contact_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/contact_name"
            android:layout_toRightOf="@+id/contacts_Iv"
            android:textSize="13sp"
            android:text="1023851233@qq.com" />
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/xiahua"/>
    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>