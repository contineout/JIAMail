<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.WriteLetterActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/archive_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/xdelete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/xdetele"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/tv_send_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/xdelete"
                    android:layout_toLeftOf="@+id/iv_send1"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerHorizontal="true"
                    android:drawableRight="@mipmap/traingle_down"
                    />
                <ImageView
                    android:id="@+id/iv_send1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/send"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2.25dp"
        android:background="@color/xiahua"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/traingle_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/traingle_right"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/tv_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件人"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/traingle_more"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:id="@+id/et_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_to"
            android:layout_toLeftOf="@+id/iv_to"
            android:layout_centerVertical="true"
            android:background="@null"
            android:inputType="textEmailAddress"/>
        <ImageView
            android:id="@+id/iv_to"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/appicon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2.25dp"
        android:background="@color/xiahua"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:id="@+id/RL_cc"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="71dp"
            android:layout_centerVertical="true"
            android:text="抄送"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_cc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_cc"
            android:layout_toLeftOf="@+id/iv_cc"
            android:layout_centerVertical="true"
            android:inputType="textEmailAddress"
            android:background="@null"/>
        <ImageView
            android:id="@+id/iv_cc"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/appicon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/Vcc"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="2.25dp"
        android:background="@color/xiahua"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:id="@+id/RL_bcc"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_bcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="71dp"
            android:layout_centerVertical="true"
            android:text="密送"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_bcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_bcc"
            android:layout_toLeftOf="@+id/iv_bcc"
            android:layout_centerVertical="true"
            android:inputType="textEmailAddress"
            android:background="@null"/>

        <ImageView
            android:id="@+id/iv_bcc"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/appicon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:visibility="gone"
        android:id="@+id/Vbcc"
        android:layout_width="match_parent"
        android:layout_height="2.25dp"
        android:background="@color/xiahua"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="71dp"
            android:layout_centerVertical="true"
            android:text="主题"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_subject"
            android:layout_centerVertical="true"
            android:background="@null"
            android:inputType="textEmailSubject"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2.25dp"
        android:background="@color/xiahua"
        android:layout_alignParentTop="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textLongMessage|textMultiLine"
        android:gravity="top"
    />


</LinearLayout>