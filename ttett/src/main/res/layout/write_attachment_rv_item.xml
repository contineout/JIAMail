<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="97.5dp"
    android:layout_height="95dp"
    android:background="@drawable/item_selector"
    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_margin="10dp"
        >
        <ImageView
            android:layout_margin="1.5dp"
            android:id="@+id/attachment_Iv"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@mipmap/file_excel_office"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/attachment_name"
            android:layout_margin="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/attachment_Iv"
            android:maxLines="1"
            android:maxEms="15"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="星标邮件" />

        <TextView
            android:id="@+id/attachment_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1.5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/attachment_name"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="3dp"
            android:textSize="12sp"
            android:textColor="#AAAAAA"
            android:text="2.7M" />

    </RelativeLayout>
</LinearLayout>