<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Contact_module.SimpleContactActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/archive_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cdelete"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/xdetele"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"

        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contacts_Iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/folder_in" />


        <TextView
            android:id="@+id/simple_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/contacts_Iv"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="112" />
        <TextView
            android:id="@+id/simple_contact_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/simple_contact_name"
            android:layout_toRightOf="@+id/contacts_Iv"
            android:textSize="18sp"
            android:text="1023851233@qq.com" />
        <Button
            android:id="@+id/send_mail"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/simple_contact_email"
            android:background="@drawable/contact_shape"
            android:text="发送邮件"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/edit_contact"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/send_mail"
            android:background="#08ACD6"
            android:text="编辑"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/delete_contact"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/edit_contact"
            android:background="@drawable/contact_shape"
            android:text="删除联系人"
            android:textSize="20sp"
            android:textColor="#071100"
            />



    </RelativeLayout>

</LinearLayout>